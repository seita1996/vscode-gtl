{
  "name": "vscode-gtl",
  "displayName": "GTL",
  "description": "Display GitLab TODOs in the sidebar, with notifications for new TODOs when they become available.",
  "icon": "media/GTL.png",
  "version": "0.2.8",
  "publisher": "seitaro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seita1996/vscode-gtl"
  },
  "engines": {
    "vscode": "^1.83.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-gtl.gtl",
        "title": "gtl"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "GTL",
      "properties": {
        "gtl.url": {
          "type": "string",
          "default": "https://gitlab.com"
        },
        "gtl.token": {
          "type": "string",
          "default": "Enter your GitLab Personal Access Token here"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notificationsView",
          "title": "GTL",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "notificationsView": [
        {
          "type": "webview",
          "id": "vscode-gtl.notificationsView",
          "name": "GTL"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "compile-tests-skip-libcheck": "tsc -p . --outDir out --skipLibCheck",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test-unit": "jest",
    "test-integration": "node ./out/test/runTest.js",
    "test": "npm run test-unit && npm run test-integration"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.83.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.16.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "cross-fetch": "^4.0.0"
  },
  "volta": {
    "node": "20.9.0"
  }
}
